    <Style x:Key="LinkChainCheckBoxStyle" TargetType="{x:Type CheckBox}" >
        <Setter Property="ToolTip">
            <Setter.Value>
                <ToolTip>
                    <TextBlock Text="連動"
                               Foreground="{StaticResource ForegroundBrushKey}" />
                </ToolTip>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ButtonBase.IsMouseOver" Value="True">
                            <Setter TargetName="ChainOffIcon"
                                    Property="Control.BorderBrush"
                                    Value="{StaticResource Highlight2BorderBrushKey}" />
                            <Setter TargetName="ChainOnIcon"
                                    Property="Control.BorderBrush"
                                    Value="{StaticResource Highlight2BorderBrushKey}" />
                        </Trigger>
                        <Trigger Property="CheckBox.IsChecked" Value="False">
                            <Setter TargetName="ChainOffIcon"
                                    Property="Control.Visibility"
                                    Value="Visible" />
                            <Setter TargetName="ChainOnIcon"
                                    Property="Control.Visibility"
                                    Value="Hidden" />
                        </Trigger>
                        <Trigger Property="CheckBox.IsChecked" Value="True">
                            <Setter TargetName="ChainOffIcon"
                                    Property="Control.Visibility"
                                    Value="Hidden" />
                            <Setter TargetName="ChainOnIcon"
                                    Property="Control.Visibility"
                                    Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                    <Grid>
                        <Control x:Name="ChainOffIcon"
                                 Style="{StaticResource ChainOffIconStyle}"
                                 BorderBrush="{StaticResource BorderBrushKey}" />

                        <Control x:Name="ChainOnIcon"
                                 Style="{StaticResource ChainOnIconStyle}"
                                 BorderBrush="{StaticResource AccentBrushKey}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
