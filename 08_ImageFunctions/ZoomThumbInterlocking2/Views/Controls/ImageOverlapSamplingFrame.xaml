<UserControl x:Class="ZoomThumb.Views.Controls.ImageOverlapSamplingFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vb="clr-namespace:ZoomThumb.Views.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">

    <Canvas x:Name="GroundCanvas" >

        <Border MinWidth="5"
                MinHeight="5"
                BorderBrush="Cyan"
                Background="Transparent"
                BorderThickness="2" >

                <!--
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Canvas.Left="{Binding FrameRect.Value.Left, Mode=OneWay}"
                Canvas.Top="{Binding FrameRect.Value.Top, Mode=OneWay}"
                Width="{Binding FrameRect.Value.Width, Mode=OneWay}"
                Height="{Binding FrameRect.Value.Height, Mode=OneWay}"
                -->

            <i:Interaction.Behaviors>
                <vb:MouseCaptureBehavior />
                <vb:MovableFrameBehavior />
            </i:Interaction.Behaviors>
        </Border>
    </Canvas>
</UserControl>
