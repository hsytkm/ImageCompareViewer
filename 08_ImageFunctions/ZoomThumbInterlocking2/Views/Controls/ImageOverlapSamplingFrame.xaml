<UserControl x:Class="ZoomThumb.Views.Controls.ImageOverlapSamplingFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vb="clr-namespace:ZoomThumb.Views.Behaviors"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">

    <Canvas x:Name="GroundCanvas"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" >
        <!--
            HorizontalAlignment="Left"
            VerticalAlignment="Top" >
        -->
        <Border MinWidth="5"
                MinHeight="5"
                BorderBrush="{Binding FrameBorderBrush, ElementName=root, Mode=OneWay}"
                Background="Transparent"
                BorderThickness="2" >

            <i:Interaction.Behaviors>
                <vb:MouseCaptureBehavior />
                <vb:MovableFrameBehavior FrameRectRatio="{Binding FrameRectRatio, ElementName=root, Mode=OneWayToSource}"
                                         IsFrameInterlock="{Binding IsFrameInterlock, ElementName=root, Mode=OneWay}" />
            </i:Interaction.Behaviors>
        </Border>

    </Canvas>
</UserControl>
